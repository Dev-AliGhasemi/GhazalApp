<?xml version="1.0" encoding="utf-8"?>
<ir.vira.CustomViews.RectangleCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recycler_books_card"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:scaleType="center"
            android:background="@color/booksRecyclerImage"
            android:id="@+id/recycler_books_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/booksRecyclerName"
            android:gravity="center"
            android:id="@+id/recycler_books_text"/>
    </LinearLayout>

</ir.vira.CustomViews.RectangleCardView>